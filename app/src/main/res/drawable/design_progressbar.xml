<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/prgress_background">
        <shape>
            <corners android:radius="20dp" />
            <solid android:color="#ffffff" />
        </shape>
    </item>


    <item android:id="@+id/progress_fill">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"/>
                <gradient
                    android:type="linear"
                    android:angle="90"
                    android:endColor="#FFE88E"
                    android:startColor="#E9C128" />
            </shape>
        </scale>
    </item>
</layer-list>


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="170dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/dialog_rounding_box">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center">

                <ImageButton
                    android:id="@+id/drugs1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/size_drugs_1"
                    android:background="@null"/>

                <ImageButton
                    android:id="@+id/drugs2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/size_drugs_2"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <ImageButton
                    android:id="@+id/drugs3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/size_drugs_3"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <ImageButton
                    android:id="@+id/drugs4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/size_drugs_4"
                    android:layout_gravity="center"
                    android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center" >

                <ImageButton
                    android:id="@+id/drugs5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/size_drugs_5"
                    android:background="@null"/>

                <ImageButton
                    android:id="@+id/drugs6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/size_drugs_6"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <ImageButton
                    android:id="@+id/drugs7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/size_drugs_7"
                    android:layout_gravity="center"
                    android:background="@null"/>

                <ImageButton
                    android:id="@+id/drugs8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/size_drugs_8"
                    android:layout_gravity="center"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:backgroundTint="#00FFFFFF"
    android:foregroundTint="#00FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@drawable/shape_roundrectangle"
        app:cardElevation="@null"
        app:cardMaxElevation="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icMainDrug"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/ic_drugs_1" />

            <TextView
                android:id="@+id/txtMainDrugName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/icMainDrug"
                android:layout_weight="1"
                android:fontFamily="@font/jejugothic"
                android:text="오메가오오오하하하"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMainDrugRotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMainDrugName"
                android:layout_alignStart="@+id/txtMainDrugName"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/jejugothic"
                android:gravity="center_vertical"
                android:text="매일 1회 1정"
                android:textColor="#7B7B7B"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMainDrugRotation"
                android:layout_alignStart="@+id/txtMainDrugRotation"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_main_alaram" />

                <TextView
                    android:id="@+id/txtMainDrugTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/jejugothic"
                    android:text="오전 10시"
                    android:textColor="#7B7B7B"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtProPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/jejugothic"
                android:text="50%"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/MedprogressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="165dp"
                android:layout_height="16dp"
                android:layout_below="@+id/txtProPercent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/design_medprogressbar" />

            <TextView
                android:id="@+id/txtProCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/MedprogressBar"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="12"

                android:fontFamily="@font/jejugothic"
                android:text="100/200정 복용"
                android:textSize="16sp"
                android:textColor="#7B7B7B"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
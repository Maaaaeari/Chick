<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:backgroundTint="#00FFFFFF"
    android:foregroundTint="#00FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="25dp"
        app:cardElevation="@null"
        app:cardMaxElevation="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icMainDrug"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="23dp"
                app:srcCompat="@drawable/ic_drugs_1" />

            <TextView
                android:id="@+id/txtMainDrugName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/icMainDrug"
                android:layout_weight="1"
                android:fontFamily="@font/jejugothic"
                android:text="오메가오오오하하하"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtMainDrugRotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMainDrugName"
                android:layout_alignStart="@+id/txtMainDrugName"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/jejugothic"
                android:gravity="center_vertical"
                android:text="매일 1회 1정"
                android:textColor="#7B7B7B"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMainDrugRotation"
                android:layout_alignStart="@+id/txtMainDrugRotation"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_main_alaram" />

                <TextView
                    android:id="@+id/txtMainDrugTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/jejugothic"
                    android:text="오전 10시"
                    android:textColor="#7B7B7B"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnMainEdit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_main_editbtn"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnMainEat"
                android:layout_width="155dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="18dp"
                android:layout_weight="1"
                android:backgroundTint="#00FFFFFF"
                android:foreground="@drawable/ic_main_eatbtn1"
                android:scaleType="centerCrop"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>